<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimario"
        android:padding="20dp"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?attr/colorPrimario"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimario"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ipd_prod"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="?attr/colorPrimario"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/tv_ipd_prod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimario"
                    android:gravity="center"
                    android:text="Cebra al Ã³leo"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/colorPrimario"
                app:srcCompat="@drawable/doble_flecha"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimario"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ipd_usr"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="?attr/colorPrimario"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/tv_ipd_usr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="?attr/colorPrimario"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ipd_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="?attr/colorBocadillo"
            android:textColor="?attr/colorBocadilloTexto"
            android:layout_weight="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimario"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="#FFFFFF"
                android:background="?attr/colorPrimario"
                android:text="Estado:" />

            <TextView
                android:id="@+id/tv_ipd_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="#FFFFFF"
                android:background="?attr/colorPrimario"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimario"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ipd_aceptar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pedidos"
                android:background="?attr/colorPrimario"
                app:tint="?attr/colorAceptar" />

            <ImageView
                android:id="@+id/iv_ipd_enviar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/truck_solid"
                android:background="?attr/colorPrimario"
                app:tint="?attr/colorEnviar" />

            <ImageView
                android:id="@+id/iv_ipd_recibir"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/recibido"
                android:background="?attr/colorPrimario"
                app:tint="?attr/colorRecibir" />

            <ImageView
                android:id="@+id/iv_ipd_rechazar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_cancel_24"
                android:background="?attr/colorPrimario"
                app:tint="?attr/colorRechazar" />
            <ImageView
                android:id="@+id/iv_ipd_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_message_24"
                android:background="?attr/colorPrimario"
                app:tint="#FFFFFF" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>