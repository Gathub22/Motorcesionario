<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimario"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_ipr_foto"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="?attr/transparencia"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="?attr/colorPrimario"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_ipr_nombre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimario"
                android:text="Nombre"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_ipr_precio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimario"
                android:text="50,00â‚¬"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimario"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ipr_comprar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorSecundario"
                android:cropToPadding="true"
                android:padding="5dp"
                app:srcCompat="@drawable/icono_catalogo"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>